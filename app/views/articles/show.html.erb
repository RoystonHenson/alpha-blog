
<h2 class="center">Title: <%= @article.title %></h2>
<div class="row">
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center bold description">Description </h4>
    <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
      <%= link_to 'Edit', edit_article_path, class: "btn btn-xs btn-primary" %>  <!-- Works without @article as argument  -->
      <%= link_to 'Delete', articles_path, method: :delete,
                            data: { confirm: "Are you sure you want to delete this article?" },
                            class: "btn btn-xs btn-danger" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-8 col-xs-offset-1">
    <%= link_to 'Back', articles_path, class: "btn btn-m btn-primary btn-back" %>
  </div>
</div><br>
